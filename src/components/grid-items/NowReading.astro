---
import { Image } from 'astro:assets';
import BoxTitle from '@components/BoxTitle.astro';
---

<div class='box gap-6 overflow-hidden flex items-center h-full w-full relative'>
	<div class='inline-block aspect-square bg-drop-200 dark:bg-drop-900 p-4 h-[150px] rounded-xl'>
		<Image
			src='https://i.harperapps.com/hcanz/covers/9781786691347/x293.jpg'
			alt='Pachinko by Min Jin Lee'
			width={293}
			height={450}
			class='h-full object-scale-down'
		/>
	</div>

	<div class='w-full'>
		<BoxTitle>Now Reading</BoxTitle>
		<span class='inline-block font-bold text-primary-500 text-xl mt-1'>Pachinko</span>
		<span class='inline-block w-full text-sm'>By Min Jin Lee</span>
	</div>

	<svg
		class='absolute -right-4 -bottom-8 h-32 w-32 opacity-20 text-primary-500'
		fill='none'
		viewBox='0 0 24 24'
	>
		<path
			stroke='currentColor'
			stroke-linecap='round'
			stroke-linejoin='round'
			stroke-width='1.5'
			d='M19.25 5.75C19.25 5.19772 18.8023 4.75 18.25 4.75H14C12.8954 4.75 12 5.64543 12 6.75V19.25L12.8284 18.4216C13.5786 17.6714 14.596 17.25 15.6569 17.25H18.25C18.8023 17.25 19.25 16.8023 19.25 16.25V5.75Z'
		>
		</path>
		<path
			stroke='currentColor'
			stroke-linecap='round'
			stroke-linejoin='round'
			stroke-width='1.5'
			d='M4.75 5.75C4.75 5.19772 5.19772 4.75 5.75 4.75H10C11.1046 4.75 12 5.64543 12 6.75V19.25L11.1716 18.4216C10.4214 17.6714 9.40401 17.25 8.34315 17.25H5.75C5.19772 17.25 4.75 16.8023 4.75 16.25V5.75Z'
		>
		</path>
	</svg>
</div>
