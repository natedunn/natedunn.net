---
import Footer from '@components/Footer.astro';
import { MainNav } from '@components/MainNav';

import '../styles/_main.css';
import { ModeToggle } from '@components/ModeToggle';
import { ThemeSwitcher } from '@components/ThemeSwitcher';
import LayoutDocument from './LayoutDocument.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;

const currentPath = new URL(Astro.request.url).pathname.slice(1);
---

<LayoutDocument title={title} class='flex flex-col h-full'>
  <header class='container flex w-full gap-6 mt-10'>
    <MainNav currentPath={currentPath} client:load />
    <div class='flex items-center gap-4'>
      <ModeToggle client:load />
      <ThemeSwitcher client:load />
    </div>
  </header>
  <div class='container flex-auto'>
    <slot />
  </div>
  <div class='container mt-6 mb-10'>
    <div class='box mt-auto'>
      <Footer />
    </div>
  </div>
</LayoutDocument>
