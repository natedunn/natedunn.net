---
import Footer from '@components/Footer.astro';
import { MainNav } from '@components/MainNav';

import '../styles/_main.css';
import { ModeToggle } from '@components/ModeToggle';
import { ThemeSwitcher } from '@components/ThemeSwitcher';
import LayoutDocument from './LayoutDocument.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;

const currentPath = new URL(Astro.request.url).pathname.slice(1);
---

<LayoutDocument title={title} class='flex flex-col h-full'>
  <header class='container flex w-full gap-6 mt-10'>
    <div class='flex-auto box !p-0 flex overflow-hidden'>
      <div class='px-8 pb-8 pt-10 bg-drop-400/10 dark:bg-drop-800 rounded-l-2xl text-5xl'>ðŸ‘‹</div>
      <div class='p-8 flex flex-col'>
        <h1>
          <span class='inline-block w-full font-medium text-3xl md:text-4xl !leading-[1.2]'>
            <span class='text-gradient'>Nate</span> is making things <br />on the internet.
          </span>
        </h1>
        <div class='mt-auto'>
          <a href='/about' class='link link-accent'>Learn more about me</a>
        </div>
      </div>
    </div>
    <div class='flex flex-col gap-6'>
      <div class='flex gap-6'>
        <div class='box flex items-center justify-center'>
          <ModeToggle client:load />
        </div>
        <div class='box flex items-center justify-center'>
          <ThemeSwitcher client:load />
        </div>
        <MainNav currentPath={currentPath} client:load />
      </div>
      <div class='box flex items-center gap-4'>
        <span class='relative flex h-4 w-4'>
          <span
            class='animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75'
          >
          </span>
          <span class='relative inline-flex rounded-full h-4 w-4 bg-green-500'></span>
        </span>
        <div>Open for projects</div>
      </div>
    </div>
  </header>
  <div class='container flex-auto'>
    <slot />
  </div>
  <div class='container mt-6 mb-10'>
    <div class='box mt-auto'>
      <Footer />
    </div>
  </div>
</LayoutDocument>
