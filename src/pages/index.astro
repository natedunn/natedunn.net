---
import Layout from '@layouts/LayoutDefault.astro';
import Grid from '@components/Grid.astro';
import Location from '@components/grid-items/Location.astro';
import NowPlaying from '@components/grid-items/NowPlaying.astro';
import Checklist from '@components/grid-items/Checklist.astro';
import Greetings from '@components/grid-items/Greetings.astro';
import Tools from '@components/grid-items/Tools.astro';
import Portrait from '@components/grid-items/Portrait.astro';
import HomeHeading from '@components/grid-items/HomeHeading.astro';
import NowReading from '@components/grid-items/NowReading.astro';
import Connect from '@components/grid-items/Connect.astro';
import ProjectRadlist from '@components/grid-items/ProjectRadlist.astro';
import ProjectProper from '@components/grid-items/ProjectProper.astro';
---

<Layout>
  <div class='flex flex-col w-full items-start h-full space-y-6'>
    <Grid class='justify-center items-center'>
      <div class='text-3xl text-drop-300 dark:text-drop-700'>
