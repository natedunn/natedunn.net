          <path
            d='M12 4.75V19.25'
            stroke='currentColor'
            stroke-width='1.5'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
          </path>
          <path
            d='M18.2501 8.74994L5.75 15.2501'
            stroke='currentColor'
            stroke-width='1.5'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
          </path>
          <path
            d='M18.2498 15.2503L5.74976 8.75012'
            stroke='currentColor'
            stroke-width='1.5'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
          </path>
        </svg>
      </div>
      <div class='inline-block border-b border-drop-200 dark:border-drop-800 w-full'></div>
    </Grid>
    <Grid>
      <div class='md:w-3/12'>
        <Portrait />
      </div>
      <div class='md:w-9/12'>
        <HomeHeading />
      </div>
    </Grid>

    <Grid>
      <div class='md:w-6/12'>
        <Greetings />
      </div>
      <div class='md:w-6/12'>
        <Location />
      </div>
    </Grid>
    <Grid>
      <div class='md:w-4/12'>
        <Checklist />
      </div>
      <div class='md:w-8/12'>
        <Tools />
      </div>
    </Grid>
    <Grid class='justify-center items-center'>
      <div class='text-3xl text-drop-300 dark:text-drop-700'>
        <svg class='w-12 h-12' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'>
          <path
            d='M4.75 10.25V5.75C4.75 5.19772 5.19772 4.75 5.75 4.75H9.25C9.80228 4.75 10.25 5.19772 10.25 5.75V10.25C10.25 10.8023 9.80228 11.25 9.25 11.25H5.75C5.19772 11.25 4.75 10.8023 4.75 10.25Z'
